			<ListPreference android:entries="@array/behavior" android:entryValues="@array/behavior" android:key="behavior" android:title="animation behavior" android:summary="select the way avatar animations change" android:defaultValue='IEEE VR demo'/>
			
	</PreferenceCategory>
		
    
	<PreferenceCategory android:title="pros only" android:key="admin_options"><CheckBoxPreference android:key="ResetLogs" android:summaryOn="DataLogs will be reset" android:summaryOff="DataLogs will be kept" android:title="Reset View Logs?" android:defaultValue="false" /><CheckBoxPreference android:summaryOff="active on odd julian days" android:summaryOn="active on even julian days" android:key="activeOnEvens" android:title="Active/Passive Behavior" android:defaultValue="true"/></PreferenceCategory>
	
</PreferenceScreen>